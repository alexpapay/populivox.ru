@model PopuliVoxRu.View.Data.ViewModels.Identity.UserLoginViewModel

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="card bg-light">
            <article class="card-body">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="card-title mt-3 text-center">Войти</h4>
                <p class="text-center">Войдите в свой аккаунт, чтобы писать отзывы:</p>
                <p>
                    <a href="" class="btn btn-block btn-twitter"> <i class="fab fa-twitter"></i> Войти через Twitter</a>
                    <a href="" class="btn btn-block btn-facebook"> <i class="fab fa-facebook-f"></i> Войти через facebook</a>
                </p>
                <p class="divider-text">
                    <span class="bg-light">ИЛИ</span>
                </p>
                <form method="post" asp-controller="Account" asp-action="Login">
                    <div class="form-group input-group">
                        <input asp-for="Email" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Email)" type="email" required="">
                    </div>
                    <div class="form-group input-group">
                        <input asp-for="Password" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Password)" type="password" required="">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Войти</button>
                    </div>
                </form>
            </article>
        </div>
    </div>
</div>

